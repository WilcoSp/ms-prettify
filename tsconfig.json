{
  "compilerOptions": {
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowUnreachableCode": false,
    "noUnusedParameters": true,
    "strict": true,
    "strictFunctionTypes": true,
    "module": "ES2020",
    "target": "ES2020",
    "allowJs": true,
    "outDir": "dist/esm",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "lib": [
      "ESNext",
      "ESNext.Array",
      "ESNext.AsyncIterable",
      "ESNext.Intl",
      "ESNext.BigInt",
      "ESNext.Symbol",
      "ESNext.Promise",
      "ES2020.Symbol.WellKnown"
    ]
  },
  "include": ["./src"]
}
